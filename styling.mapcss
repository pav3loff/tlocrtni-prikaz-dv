setting::hide_icons {
  type: boolean;
  label: tr("Hide icons at low zoom");
  default: true;
}

node|z-21[type=stup] {
	icon-image: "C:/Users/mario/Desktop/dv/test.png";
	icon-width: 15;
	icon-height: 15;
	icon-offset-y: 3;
	text: "id";
	text-color: white;
	text-halo-color: black;
	text-halo-radius: 1;
	font-family: "Droid Sans";
	font-size: 11;
}

node|z21-[type=stup] {
	symbol-shape: circle;
	symbol-size: 10;
	symbol-fill-color: white;
}

node|z-22[type=izolator][setting("hide_icons")] {
	symbol-shape: none;
}

